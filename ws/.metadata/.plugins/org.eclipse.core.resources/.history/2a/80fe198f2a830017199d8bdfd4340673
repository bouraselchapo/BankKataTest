package com.bank.account.domaine;

import java.math.BigDecimal;
import java.time.LocalDateTime;

/**
 * @author PHBS06171
 *
 */
public class Transaction {

  private final Account account;
  private final BigDecimal amount;
  private final LocalDateTime date;
  private final Object transactionType;

  /**
   * @param account
   * @param transacctionType
   * @param amount
   * @param transactionDate
   */
  public Transaction(Account account, TransactionType transactionType, BigDecimal amount,
      LocalDateTime transactionDate) {
    this.account = account;
    this.transactionType = transactionType;
    this.amount = amount;
    this.date = transactionDate;// TODO Auto-generated constructor stub
  }

}
