package com.bank.account.service;

import java.math.BigDecimal;

import com.bank.account.domaine.AccountHolder;

/**
 * Interface for all account operations.
 * 
 * @author hicham.
 *
 */
public interface AccountService {

  /**
   * @param accountHolder
   * 
   */
  void createAccount(AccountHolder accountHolder);

  /**
   * @param accountNumber
   * 
   */
  void depositAmount(BigDecimal accountNumber);

  /**
   * 
   */
  void withdrawAmount();

  /**
   * @param i
   */
  void withdrowAmount(int i);

}
