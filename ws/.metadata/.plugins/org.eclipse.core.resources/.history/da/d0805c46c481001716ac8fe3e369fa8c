package com.bank.account.persistence.impl;

import java.math.BigDecimal;
import java.time.LocalDateTime;

import com.bank.account.domaine.Account;
import com.bank.account.domaine.Transaction;
import com.bank.account.domaine.TransactionType;
import com.bank.account.persistence.TransactionDAO;

/**
 * @author PHBS06171
 *
 */
public class TransactionDAOImpl implements TransactionDAO {

  /**
   * @param account
   * @param transacctionType
   * @param amount
   * @param transactionDate
   */
  public void addTransaction(Account account, TransactionType transacctionType, BigDecimal amount,
      LocalDateTime transactionDate) {
    transactionMap.add(new Transaction(account, transacctionType, amount,
        transactionDate));// TODO Auto-generated method stub

  }

}
